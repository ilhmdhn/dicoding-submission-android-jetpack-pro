<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ilhmdhn.movieapps">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_movie"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApps">
        <activity android:name=".ui.favorite.FavoriteActivity" />
        <activity android:name="com.ilhmdhn.movieapps.ui.splash.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.detail.movie.DetailMovieActivity" />
        <activity android:name=".ui.detail.tvshow.DetailTvShowActivity" />
        <activity android:name=".ui.home.HomeActivity" />
    </application>

</manifest>